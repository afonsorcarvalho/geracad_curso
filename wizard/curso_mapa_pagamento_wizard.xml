<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_geracad_curso_mapa_pagamento_wizard_form" model="ir.ui.view">
        <field name="name">wizard.geracad.curso.mata.pagamento.turma</field>
        <field name="model">geracad.curso.mapa.pagamento.wizard</field>
        <field name="arch" type="xml">
            <form string="Gerar Mapa de Pagamentos por turma">
                <sheet>
                    <group>
                            <field name="curso_turma_id"
                            options="{'no_create_edit': True,'no_create': True}"
                            />                       
                    </group>
                </sheet>
                <footer>
                    <button string="Confirmar" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
