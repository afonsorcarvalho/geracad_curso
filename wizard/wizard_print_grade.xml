<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard para seleção e impressão da grade curricular -->
    <record id="view_geracad_curso_wizard_print_grade_form" model="ir.ui.view">
        <field name="name">wizard.geracad.curso.print.grade</field>
        <field name="model">geracad.curso.wizard.print.grade</field>
        <field name="arch" type="xml">
            <form string="Imprimir Grade Curricular">
                <sheet>
                    <group>
                        <group>
                            <field name="curso_id" 
                                   options="{'no_create': True}"
                                   placeholder="Selecione um curso..."/>
                            <field name="grade_versao" 
                                   domain="[('curso_id', '=', curso_id)]"
                                   options="{'no_create': True}"
                                   placeholder="Selecione uma versão da grade..."/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Imprimir" name="action_confirm" type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action para abrir o wizard -->
    <record id="action_open_wizard_print_grade" model="ir.actions.act_window">
        <field name="name">Imprimir Grade Curricular</field>
        <field name="res_model">geracad.curso.wizard.print.grade</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_geracad_curso_wizard_print_grade_form"/>
        <field name="target">new</field>
    </record>

</odoo>
