<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<template id="view_historico_aluno_notas_template">
		<table class="table table-sm table-striped"  >
			<thead>
				<tr>
					<th colspan="8">
						 
						<t t-esc="periodo" />
						º Período
					</th>
				</tr>
				<tr>
					<th  >
								Disciplina
							</th>
					<th >
								CH
							</th>
					<th >
								Faltas
							</th>
					<th >
								1º Nota
							</th>
					<th >
								2º Nota
							</th>
					<th>
								Final
							</th>
					<th >
								Média
							</th>
					<th >
								Situação
							</th>

				</tr>
			</thead>
			
			<tbody>
				
				<t t-foreach="o._get_notas_periodo(periodo)" t-as="notas_line">
					
					<t t-log="notas_line"/>
					
					<tr>
						<td  class="col-disciplina">
							<span t-field="notas_line.disciplina_id.name" />
						</td>

						<td>
							<span t-field="notas_line.disciplina_id.carga_horaria" />
						</td>

						<td  >
							<span t-field="notas_line.faltas" />
						</td>

						<td  > 
							<span t-field="notas_line.nota_1" />
						</td>

						<td  >
							<span t-field="notas_line.nota_2" />
						</td>
						<td >
							<span t-field="notas_line.final" />
						</td>
						<td  >
							<span t-field="notas_line.media" />
						</td>
						<td  >
							<span t-field="notas_line.situation" />
						</td>
					</tr>
				</t>
			</tbody>
			

		</table>
	</template>
</odoo>